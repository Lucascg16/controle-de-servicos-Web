@using ServicoInWeb.ViewModels
@model UsuarioViewModel;
@{
    ViewData["Title"] = "Usuarios";
}
<div class="col-lg-4">
    <div class="block u-card shadow_ m-0">
        <div class="center">
            <div class="icon-circle me-4" style="color: black">
                
            </div>
            <i class="fa-solid fa-plus"></i>
            <div class="w-100">
                <span>Adicionar um novo usuário</span>
                <a class="btn btn-primary text-decoration-none" asp-action="criarusuario" asp-controller="Usuario">Adicionar</a>
            </div>
        </div>
    </div>
</div>
<div>
    <table>
        <caption>@Model.Usuarios.Count() Usuários</caption>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Nivel de acesso</th>
        </tr>
        @foreach(var usuario in Model.Usuarios)
        {
            <tr>
                <th scope="row">@usuario.Id</th>
                <td>@usuario.Nome</td>
                <td>@usuario.Email</td>
                <td>@usuario.Role</td>
            </tr>
        }
    </table>
</div>


<style>
    .u-card{
        box-shadow: 2px 2px 2px 1px rgba(0,0,0,0.2);
        height: auto;
        width: auto;
        padding: 0.56rem 1rem;
        min-height: unset;
        min-width: unset;
        border-radius: 15px;
    }
</style>


