@using ServicoInWeb.ViewModels;
@model RedefinirSenhaViewModel
@{
    Layout = "_layout_Login";
    ViewData["Title"] = "Redefinir Senha";
    string tooltip = "A senha deve conter no minimo 8 caracteres, 1 letra maiuscula, 1 minuscula, 1 n√∫mero, 1 caractere especial";
}
<div class="form-base">
    <form asp-action="RedefinirSenha" asp-controller="Senha" method="post">
        <div>
            <h5 class="text-sm-center login-title">Redefinir Senha</h5>
            @if (TempData["MensagemError"] is not null)
            {
                <div class="text-lg-start text-danger">
                    <p class="text-center">@TempData["MensagemError"]</p>
                </div>
            }
            @if (TempData["Sucesso"] is not null)
            {
                <div class="text-lg-start text-success">
                    <p class="text-center">@TempData["Sucesso"]</p>
                </div>
                <script>
                    setTimeout(function () {
                        window.location.href = "/Login/Index";
                    }, 2000);
                </script>
            }
            <input type="text" asp-for="Id" hidden>
            <input type="text" asp-for="Token" hidden>
            <div class="col-lg-12">
                <label class="form-label" for="">Senha <i class="fa-regular fa-circle-question fa-sm"
                        data-toggle="tooltip" data-placement="right" title="@tooltip"></i></label>
                <input type="password" asp-for="Senha" class="form-control">
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Senha)</span>
            </div>
            <div class="col-lg-12">
                <label class="form-label" for="">Confirmar senha</label>
                <input type="password" asp-for="ConfirmarSenha" class="form-control">
                <span class="text-danger">@Html.ValidationMessageFor(x => x.ConfirmarSenha)</span>
            </div>
        </div>
        <div class="diviser">
            <hr>
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-login" type="submit">Redefinir</button>
        </div>
    </form>
</div>
<style>
    .diviser hr {
        color: #f7f7f7;
    }
</style>
